    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/webpack": "^5.28.5",
    "eslint": "^9.28.0",
    "eslint-plugin-perfectionist": "^5.0.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
